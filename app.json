{
  "expo": {
    "name": "Game Zone - 2 Player Games",
    "slug": "two-player-game",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "gamezone",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "privacy": "public",
    "description": "Play classic 2-player offline games including Tic Tac Toe, Connect Four, and Dots & Boxes. No internet required!",
    "primaryColor": "#7C3AED",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#7C3AED"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.gamezone.twoplayergames",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "UIBackgroundModes": [],
        "NSPhotoLibraryUsageDescription": "This app does not require photo library access."
      }
    },
    "android": {
      "package": "com.gamezone.twoplayergames",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#7C3AED"
      },
      "permissions": [],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "playStoreUrl": "https://play.google.com/store/apps/details?id=com.gamezone.twoplayergames"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro",
      "output": "static",
      "lang": "en",
      "name": "Game Zone - 2 Player Games",
      "shortName": "Game Zone",
      "description": "Play classic 2-player offline games including Tic Tac Toe, Connect Four, and Dots & Boxes",
      "themeColor": "#7C3AED",
      "backgroundColor": "#0F0E17",
      "display": "standalone",
      "startUrl": "/",
      "orientation": "portrait"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "extra": {
      "eas": {
        "projectId": "[your-project-id]"
      }
    }
  }
}
